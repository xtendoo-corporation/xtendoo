<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_line_tree" model="ir.ui.view">
        <field name="name">stock.move.line.tree</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="partner_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_move_line_kanban" model="ir.ui.view">
        <field name="name">stock.move.line.kanban</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <div>
                    <strong>
                        <field name="partner_id"/>
                    </strong>
                </div>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_move_line_view_search">
        <field name="name">stock.move.line.search</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.stock_move_line_view_search" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="partner_id" />
            </field>
            <filter name="groupby_product_id" position="after">
                <filter
                    name="groupby_partner_id"
                    string="Partner"
                    context="{'group_by': 'partner_id'}"
                />
            </filter>
        </field>
    </record>

</odoo>
