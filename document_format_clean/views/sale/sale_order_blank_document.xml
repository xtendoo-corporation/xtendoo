<?xml version="1.0" ?>
<odoo>
    <record id="report_sale_order_blank_format" model="ir.actions.report">
        <field name="name">Pedido/Presupuesto sin Cabecera</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">document_format_clean.format_report_sale_order_blank_document</field>
        <field name="print_report_name">'(object._get_report_base_filename())'</field>
    </record>

    <template id="format_report_sale_order_blank_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t
                    t-call="document_format_clean.report_saleorder_blank_document_xtendoo"
                />
            </t>
        </t>
    </template>
    <template id="document_format_clean.report_saleorder_blank_document_xtendoo">
        <t t-name="document_format_clean.report_saleorder_blank_document_xtendoo">
            <t t-call="web.basic_layout">
                <t
                    t-set="doc"
                    t-value="doc.with_context(lang=doc.partner_id.lang)"
                />
                <div class="page">
                    <!-- Datos del documento -->
                    <!-- Datos del movimiento -->
                    <div style="width:50%; float:left;">
                        <ul class="list-unstyled">
                            <t
                                t-if="not (env.context.get('proforma', False) or is_pro_forma)"
                            >
                                <li t-if="doc.state in ['draft','sent']">
                                    <h2 class="mt16">
                                        <b>Presupuesto:</b>
                                        <span t-field="doc.name"/>
                                    </h2>
                                </li>
                                <li t-if="doc.state not in ['draft','sent']">
                                    <h2 class="mt16">
                                        <b>Pedido:</b>
                                        <span t-field="doc.name"/>
                                    </h2>
                                </li>
                            </t>
                            <li
                                t-if="env.context.get('proforma', False) or is_pro_forma"
                            >
                                <b>Factura Pro-Forma:</b>
                                <span t-field="doc.name"/>
                            </li>
                            <li t-if="doc.date_order">
                                <b>Fecha:</b>
                                <span t-esc="doc.date_order.strftime('%d/%m/%Y')"/>
                            </li>
                            <li t-if="doc.client_order_ref">
                                <b>Ref. cliente:</b>
                                <span t-field="doc.client_order_ref"/>
                            </li>
                            <li t-if="doc.user_id.name">
                                <b>Comercial:</b>
                                <span t-field="doc.user_id"/>
                            </li>
                            <div name="payment_term">
                                <li t-if="doc.payment_term_id">
                                    <b>Terminos de pago:</b>
                                    <span t-field="doc.payment_term_id"/>
                                </li>
                            </div>
                            <li
                                t-if="doc.validity_date and doc.state in ['draft', 'sent']"
                            >
                                <b>Fecha de validez:</b>
                                <span t-field="doc.validity_date"/>
                            </li>
                        </ul>
                    </div>
                    <!-- Fin datos del movimiento -->
                    <!-- Datos del cliente -->
                    <div style="width:50%; float:left;">
                        <ul class="list-unstyled">
                            <li t-if="doc.partner_id.name">
                                <span t-field="doc.partner_id.name"/>
                            </li>
                            <li t-if="doc.partner_id.street">
                                <span t-field="doc.partner_id.street"/>
                            </li>
                            <li>
                                <span
                                    t-if="doc.partner_id.zip"
                                    t-field="doc.partner_id.zip"
                                />
                                <span
                                    t-if="doc.partner_id.city"
                                    t-field="doc.partner_id.city"
                                />
                                ,
                                <span
                                    t-if="doc.partner_id.state_id"
                                    t-field="doc.partner_id.state_id.name"
                                />
                            </li>
                            <li t-if="doc.partner_id.country_id and doc.partner_id.country_id.name not in ['España','Spain']">
                                <span t-field="doc.partner_id.country_id.name"/>
                            </li>
                            <li t-if="doc.partner_id.vat">
                                NIF:
                                <span t-field="doc.partner_id.vat"/>
                            </li>
                        </ul>
                    </div>
                    <t
                        t-if="doc.partner_shipping_id == doc.partner_invoice_id and doc.partner_invoice_id != doc.partner_id or doc.partner_shipping_id != doc.partner_invoice_id"
                    >
                        <t t-set="information_block">
                            <strong
                                t-if="doc.partner_shipping_id == doc.partner_invoice_id"
                            >Dirección de
                                facturación y
                                envio:
                            </strong>
                            <strong
                                t-if="doc.partner_shipping_id != doc.partner_invoice_id"
                            >Dirección de
                                facturación:
                            </strong>
                            <div
                                t-field="doc.partner_invoice_id"
                                t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True, 'phone_icons': True}"
                            />
                            <t
                                t-if="doc.partner_shipping_id != doc.partner_invoice_id"
                            >
                                <strong>Dirección de envio:</strong>
                                <div
                                    t-field="doc.partner_shipping_id"
                                    t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True, 'phone_icons': True}"
                                />
                            </t>
                        </t>
                    </t>
                    <!-- Fin datos del cliente -->
                    <!-- Fin datos del documento -->
                    <div class="page">
                        <div class="oe_structure"/>
                        <!-- Is there a discount on at least one line? -->
                        <t
                            t-set="display_discount"
                            t-value="any([l.discount for l in doc.order_line])"
                        />
                        <table class="table">
                            <!--Cabecera -->
                            <thead>
                                <tr>
                                    <th
                                        name="th_code"
                                        class="text-left"
                                        style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                    >
                                        Código
                                    </th>
                                    <th
                                        name="th_description"
                                        class="text-left"
                                        style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                    >
                                        Descripción
                                    </th>
                                    <th
                                        name="th_quantity"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        Unds
                                    </th>
                                    <th
                                        name="th_priceunit"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        Importe
                                    </th>
                                    <th
                                        name="th_discount"
                                        t-if="display_discount"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        groups="product.group_discount_per_so_line"
                                    >
                                        Dto.%
                                    </th>
                                    <th
                                        name="th_taxes"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        IVA%
                                    </th>
                                    <th
                                        name="th_subtotal"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:12%; font-size:0.8em; !important;"
                                    >
                                        <t
                                            groups="account.group_show_line_subtotals_tax_excluded"
                                        >Total
                                        </t>
                                        <t
                                            groups="account.group_show_line_subtotals_tax_included"
                                        >Total I.I.
                                        </t>
                                    </th>
                                </tr>
                            </thead>
                            <!-- Fin cabecera -->
                            <!-- Lineas -->
                            <tbody class="sale_tbody">
                                <!-- Variables -->
                                <t t-set="current_subtotal" t-value="0"/>
                                <!-- Fin variables -->
                                <t t-foreach="doc.order_line" t-as="line">
                                    <!-- Variables FOREACH -->
                                    <t
                                        t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_subtotal"
                                        groups="account.group_show_line_subtotals_tax_excluded"
                                    />
                                    <t
                                        t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_total"
                                        groups="account.group_show_line_subtotals_tax_included"
                                    />
                                    <!-- Fin variables FOREACH -->
                                    <!-- Lineas Impresión -->
                                    <tr
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                    >
                                        <t t-if="not line.display_type">
                                            <td
                                                class="text-left"
                                                style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    t-field="line.product_id.default_code"
                                                />
                                            </td>
                                            <td
                                                name="td_name"
                                                style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                            >
                                                <t
                                                    t-set="productName"
                                                    t-value="line.name"
                                                />
                                                <t
                                                    t-set="name_num"
                                                    t-value="productName.find(']') + 1 "
                                                />
                                                <t
                                                    t-set="name"
                                                    t-value="productName[name_num:]"
                                                />
                                                <span
                                                    t-esc="name"
                                                    t-options="{'widget': 'text'}"
                                                />
                                            </td>
                                            <td
                                                name="td_quantity"
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    t-field="line.product_uom_qty"
                                                />
                                                <span
                                                    t-field="line.product_uom"
                                                    groups="uom.group_uom"
                                                />
                                            </td>
                                            <td
                                                name="td_price_unit"
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span t-field="line.price_unit"/>
                                            </td>
                                            <td
                                                t-if="display_discount"
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                                groups="product.group_discount_per_so_line"
                                            >
                                                <span t-field="line.discount"/>
                                            </td>
                                            <td
                                                name="td_taxes"
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span t-esc="', '.join(map(lambda x: (str(x.amount)), line.tax_id))"
                                                      id="line.tax_id"/>
                                            </td>
                                            <td
                                                name="td_subtotal"
                                                class="text-right o_price_total"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    t-field="line.price_subtotal"
                                                    groups="account.group_show_line_subtotals_tax_excluded"
                                                />
                                                <span
                                                    t-field="line.price_total"
                                                    groups="account.group_show_line_subtotals_tax_included"
                                                />
                                            </td>
                                        </t>
                                        <t
                                            t-if="line.display_type == 'line_section'"
                                        >
                                            <td
                                                name="td_section_line"
                                                colspan="99"
                                                style="solid; black; padding: 0px; margin: 0px; font-size:0.8em; !important;"
                                            >
                                                <span t-field="line.name"/>
                                            </td>
                                            <t
                                                t-set="current_section"
                                                t-value="line"
                                            />
                                            <t
                                                t-set="current_subtotal"
                                                t-value="0"
                                            />
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td
                                                name="td_note_line"
                                                colspan="99"
                                                style="solid; black; padding: 0px; margin: 0px; font-size:0.8em; !important;"
                                            >
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <!-- Fin lineas Impresión -->
                                </t>
                            </tbody>
                            <!-- Fin lineas -->
                        </table>
                    </div>
                    <div class="clearfix" name="so_total_summary">
                        <!-- Totales -->
                        <div id="total" class="row" name="total">
                            <div
                                t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto"
                            >
                                <table class="table table-sm">
                                    <tr class="border-black o_subtotal" style="">
                                        <td
                                            name="td_amount_untaxed_label"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <strong>Subtotal</strong>
                                        </td>
                                        <td
                                            name="td_amount_untaxed"
                                            class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <span t-field="doc.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t
                                        t-foreach="doc.amount_by_group"
                                        t-as="amount_by_group"
                                    >
                                        <tr style="">
                                            <td
                                                name="td_amount_by_group_label_3"
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <span t-esc="amount_by_group[0]"/>
                                                <span>en</span>
                                                <span>
                                                    <t
                                                        t-esc="amount_by_group[2]"
                                                        t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"
                                                    />
                                                </span>
                                            </td>
                                            <td
                                                name="td_amount_by_group_3"
                                                class="text-right o_price_total"
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <span
                                                    t-esc="amount_by_group[1]"
                                                    t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td
                                            name="td_amount_total_label"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <strong>Total</strong>
                                        </td>
                                        <td
                                            name="td_amount_total"
                                            class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!-- Fin totales -->
                    </div>
                    <p t-field="doc.note"/>
                    <p
                        id="fiscal_position_remark"
                        t-if="doc.fiscal_position_id and doc.fiscal_position_id.note"
                    >
                        <strong>Observación de la posición fiscal</strong>
                        <span t-field="doc.fiscal_position_id.note"/>
                    </p>
                    <div
                        t-if="doc.signature"
                        class="mt32 ml16 mr16"
                        name="signature"
                    >
                        <div class="offset-8">
                            <img
                                t-att-src="image_data_uri(doc.signature)"
                                style="max-height: 4cm; max-width: 8cm;"
                            />
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="doc.signed_by"/>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>
