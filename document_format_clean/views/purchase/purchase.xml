<?xml version="1.0"?>
<odoo>
    <!-- Herencia del tenplate del informe -->
    <template id="document_format_clean.report_purchaseorder_inherit" inherit_id="purchase.report_purchaseorder">
        <xpath expr="//t[@t-call='purchase.report_purchaseorder_document']" position="replace">
            <t t-call="document_format_clean.report_purchaseorder_document_xtendoo" t-lang="o.partner_id.lang"/>
        </xpath>
    </template>
    <!-- Fin Herencia del tenplate del informe -->
    <template id="document_format_clean.report_purchaseorder_document_xtendoo">
        <t t-name="document_format_clean.report_purchaseorder_document_xtendoo">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                <div class="page">
                    <t t-set="is_purchase" t-value="1"/>
                    <!-- Datos del documento -->
                    <!-- Datos del movimiento -->
                    <div style="width:50%; float:left;">
                        <ul class="list-unstyled">
                            <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                                <li t-if="o.state in ['draft']">
                                    <h2 class="mt16">
                                        <b>
                                            Presupuesto:
                                        </b>
                                        <span t-field="o.name"/>
                                    </h2>
                                </li>
                                <li t-if="o.state not in ['draft']">
                                    <h2 class="mt16">
                                        <b>
                                            Pedido:
                                        </b>
                                        <span t-field="o.name"/>
                                    </h2>
                                </li>
                            </t>
                            <li t-if="env.context.get('proforma', False) or is_pro_forma">
                                <b>
                                    Factura Pro-Forma:
                                </b>
                                <span t-field="o.name"/>
                            </li>
                            <li t-if="o.date_approve">
                                <b>
                                    Fecha:
                                </b>
                                <span t-esc="o.date_approve.strftime('%d/%m/%Y')"/>
                            </li>
                            <li t-if="o.user_id.name">
                                <b>
                                    Comercial:
                                </b>
                                <span t-field="o.write_uid"/>
                            </li>
                        </ul>
                    </div>
                    <!-- Fin datos del movimiento -->
                    <!-- Datos del cliente -->
                    <div style="width:50%; float:left;">
                        <ul class="list-unstyled">
                            <li t-if="o.partner_id.name">
                                <span t-field="o.partner_id.name"/>
                            </li>
                            <li t-if="o.partner_id.street">
                                <span t-field="o.partner_id.street"/>
                            </li>
                            <li>
                                <span t-if="o.partner_id.zip" t-field="o.partner_id.zip"/>
                                <span t-if="o.partner_id.city" t-field="o.partner_id.city"/>
                                ,
                                <span t-if="o.partner_id.state_id" t-field="o.partner_id.state_id.name"/>
                            </li>
                            <li t-if="o.partner_id.country_id and o.partner_id.country_id.name not in ['España','Spain']">
                                <span t-field="o.partner_id.country_id.name"/>
                            </li>
                            <li t-if="o.partner_id.vat">
                                NIF:
                                <span t-field="o.partner_id.vat"/>
                            </li>
                        </ul>
                    </div>
                    <!-- Fin datos del cliente -->
                    <!-- Fin datos del documento -->
                    <div class="page">
                        <div class="oe_structure"/>
                        <!-- Is there a discount on at least one line? -->
<!--                        <t-->
<!--                            t-set="display_
"-->
<!--                            t-value="any([l.discount for l in o.order_line])"-->
<!--                        />-->
                        <table class="table">
                            <!--Cabecera -->
                            <thead>
                                <tr>
                                    <th
                                        name="th_code"
                                        class="text-left"
                                        style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                    >
                                        Código
                                    </th>
                                    <th
                                        name="th_description"
                                        class="text-left"
                                        style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                    >
                                        Descripción
                                    </th>
                                    <th
                                        name="th_quantity"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        Unds
                                    </th>
                                    <th
                                        name="th_priceunit"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        Importe
                                    </th>
<!--                                    <th-->
<!--                                        name="th_discount"-->
<!--                                        t-if="display_discount"-->
<!--                                        class="text-right"-->
<!--                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"-->
<!--                                        groups="product.group_discount_per_so_line"-->
<!--                                    >-->
<!--                                        Dto.%-->
<!--                                    </th>-->
                                    <th
                                        name="th_taxes"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        IVA%
                                    </th>
                                    <th
                                        name="th_subtotal"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:12%; font-size:0.8em; !important;"
                                    >
                                        <t
                                            groups="account.group_show_line_subtotals_tax_excluded"
                                        >Total
                                        </t>
                                        <t
                                            groups="account.group_show_line_subtotals_tax_included"
                                        >Total I.I.
                                        </t>
                                    </th>
                                </tr>
                            </thead>
                            <!-- Fin cabecera -->
                            <!-- Lineas -->
                            <tbody class="sale_tbody">
                                <!-- Variables -->
                                <t t-set="current_subtotal" t-value="0"/>
                                <!-- Fin variables -->
                                <t t-foreach="o.order_line" t-as="line">
                                    <!-- Variables FOREACH -->
                                    <t
                                        t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_subtotal"
                                        groups="account.group_show_line_subtotals_tax_excluded"
                                    />
                                    <t
                                        t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_total"
                                        groups="account.group_show_line_subtotals_tax_included"
                                    />
                                    <!-- Fin variables FOREACH -->
                                    <!-- Lineas Impresión -->
                                    <tr
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                    >
                                        <t t-if="not line.display_type">
                                            <td
                                                class="text-left"
                                                style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    t-field="line.product_id.default_code"
                                                />
                                            </td>
                                            <td
                                                name="td_name"
                                                style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                            >
                                                <t
                                                    t-set="productName"
                                                    t-value="line.name"
                                                />
                                                <t
                                                    t-set="name_num"
                                                    t-value="productName.find(']') + 1 "
                                                />
                                                <t
                                                    t-set="name"
                                                    t-value="productName[name_num:]"
                                                />
                                                <span
                                                    t-esc="name"
                                                    t-options="{'widget': 'text'}"
                                                />
                                            </td>
                                            <td
                                                name="td_quantity"
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    t-field="line.product_uom_qty"
                                                />
                                                <span
                                                    t-field="line.product_uom"
                                                    groups="uom.group_uom"
                                                />
                                            </td>
                                            <td
                                                name="td_price_unit"
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span t-field="line.price_unit"/>
                                            </td>
<!--                                            <td-->
<!--                                                t-if="display_discount"-->
<!--                                                class="text-right"-->
<!--                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"-->
<!--                                                groups="product.group_discount_per_so_line"-->
<!--                                            >-->
<!--                                                <span t-field="line.discount"/>-->
<!--                                            </td>-->
                                            <td
                                                name="td_taxes"
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span t-esc="', '.join(map(lambda x: (str(x.amount)), line.taxes_id))"
                                                      id="line.taxes_id"/>
                                            </td>
                                            <td
                                                name="td_subtotal"
                                                class="text-right o_price_total"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em;!important;"
                                            >
                                                <span
                                                    t-field="line.price_subtotal"
                                                    groups="account.group_show_line_subtotals_tax_excluded"
                                                />
                                                <span
                                                    t-field="line.price_total"
                                                    groups="account.group_show_line_subtotals_tax_included"
                                                />
                                            </td>
                                        </t>
                                        <t
                                            t-if="line.display_type == 'line_section'"
                                        >
                                            <td
                                                name="td_section_line"
                                                colspan="99"
                                                style="solid; black; padding: 0px; margin: 0px; font-size:0.8em; !important;"
                                            >
                                                <span t-field="line.name"/>
                                            </td>
                                            <t
                                                t-set="current_section"
                                                t-value="line"
                                            />
                                            <t
                                                t-set="current_subtotal"
                                                t-value="0"
                                            />
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td
                                                name="td_note_line"
                                                colspan="99"
                                                style="solid; black; padding: 0px; margin: 0px; font-size:0.8em; !important;"
                                            >
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>
                                    <!-- Fin lineas Impresión -->
                                </t>
                            </tbody>
                            <!-- Fin lineas -->
                        </table>
                    </div>
                    <div class="clearfix" name="so_total_summary">
                        <!-- Totales -->
                        <div id="total" class="row" name="total">
                            <div
                                t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto"
                            >
                                <table class="table table-sm">
                                    <tr class="border-black o_subtotal" style="">
                                        <td
                                            name="td_amount_untaxed_label"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <strong>Subtotal</strong>
                                        </td>
                                        <td
                                            name="td_amount_untaxed"
                                            class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td name="o_total" style="solid; black; padding: 0px; margin: 0px; !important;">
                                            Impuestos
                                        </td>
                                        <td class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; !important;">
                                            <span t-field="o.amount_tax"
                                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td
                                            name="td_amount_total_label"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <strong>Total</strong>
                                        </td>
                                        <td
                                            name="td_amount_total"
                                            class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; !important;"
                                        >
                                            <span t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <!-- Fin totales -->
                    </div>
                    <p t-field="o.notes"/>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>
    </template>
</odoo>
