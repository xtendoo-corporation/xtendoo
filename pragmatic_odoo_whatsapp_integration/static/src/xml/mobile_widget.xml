<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="FieldMany2ManyTagsMobile" t-extend="FieldMany2ManyTag">
        <t t-jquery="[t-attf-class*=badge]" t-operation="replace">
            <div t-attf-class="badge badge-pill dropdown o_tag_color_0 #{el.mobile.length &lt; 10 ? 'o_tag_error' : ''}" t-att-data-color="color" t-att-data-index="el_index" t-att-data-id="el.id" t-attf-title="Tag color: #{colornames[color]}">
                <span class="o_badge_text" t-att-title="el.mobile"><t t-esc="el.display_name"/></span>
                <a t-if="!readonly" href="#" class="fa fa-times o_delete" title="Delete" aria-label="Delete"/>
            </div>
        </t>
    </t>
</templates>