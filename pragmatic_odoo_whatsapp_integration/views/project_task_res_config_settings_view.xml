<odoo>
    <data>
        <record id="view_task_configuration_inherit" model="ir.ui.view">
            <field name="name">task.res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="project.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('app_settings_block')][@data-key='project']/div[2]" position="after">
                    <h2>Whatsapp Configuration</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_project_enable_signature" string="Add signature?"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_project_enable_signature" string="Add signature?"/>
                                <div class="text-muted">
                                    Show Signature
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="group_project_display_chatter_message" string="Add in chatter message?"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="group_project_display_chatter_message" string="Add in chatter message?"/>
                                <div class="text-muted">
                                    Display Message in chatter
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>