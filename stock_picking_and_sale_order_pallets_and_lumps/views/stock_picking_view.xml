<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

    <!-- Boton create Invoice-->
        <record id="stock_picking_and_sale_order_pallets_and_lumps.view_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.view.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='picking_type_id']" position="after">
                   <field name="lumps_number"/>
                   <field name="palets_number"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
