<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="document_format.report_label_barcode">
        <t t-name="document_format.report_label_barcode">
            <t t-foreach="doc.label_qty" t-as="i">
                <t t-call="web.basic_layout">
                    <div class="page text-justify">
                        <div class="text-center">
                            <div style="text-align:center;font-size:0.9em;">
                                <span t-field="doc.product_id.name"/>
                            </div>
                            <div style="text-align:center;">
                                <t t-if="doc.product_id.barcode">
                                    <img
                                        t-if="len(doc.product_id.barcode) == 13"
                                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', doc.product_id.barcode, 600, 100)"
                                        style="width:100%;height:35px;"
                                        alt="Barcode"
                                    />
                                    <img
                                        t-elif="len(doc.product_id.barcode) == 8"
                                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', doc.product_id.barcode, 600, 100)"
                                        style="width:100%;height:35px;"
                                        alt="Barcode"
                                    />
                                    <img
                                        t-else=""
                                        t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', doc.product_id.barcode, 600, 100)"
                                        style="width:100%;height:35px;"
                                        alt="Barcode"
                                    />
                                </t>
                            </div>
                            <div style="text-align:center;">
                                <span
                                    t-field="doc.product_id.list_price"
                                    t-options="{'widget': 'monetary', 'display_currency': doc.product_id.currency_id}"
                                />
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

    <template id="label_barcode_report"
              inherit_id="stock_picking_product_barcode_report.label_barcode_report">
        <xpath expr='//t[@t-call="stock_picking_product_barcode_report.report_label_barcode"]' position="replace">
            <t t-call="document_format.report_label_barcode"
               t-lang="doc.env.user.lang"/>
        </xpath>
    </template>


