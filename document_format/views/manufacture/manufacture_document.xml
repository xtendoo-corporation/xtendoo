<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <data>

          <report id="document_format.mrp_report"
                string="Parte de ProducciÃ³n"
                model="mrp.production"
                report_type="qweb-pdf"
                name="document_format.mrp_report_rp"
                file="document_format.mrp_report_rp"
        />

          <template id="document_format.mrp_report_rp">
           <t t-name="document_format.mrp_report_rp">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                   <t t-call="document_format.mrp_report_document"/>
                </t>
            </t>
           </t>
        </template>

        <template id="document_format.mrp_report_document">

            <t t-name="document_format.mrp_report_document">
            <t t-call="web.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                <div class="row">
                       <strong>Parte: </strong>
                       <span t-field="o.name"/>
                </div>
                <div class="row">
                       <strong>Fecha: </strong>
                       <span t-field="o.date_planned_start"/>
                </div>

                <br/>

                    <div class="row">
                        <h4>
                            <span>Producto fabricado</span>
                        </h4>
                    </div>

                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th class="text-left" style="solid; black; padding: 0px; margin: 0px; width:50%; !important;">
                                    Producto</th>
                                <th class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                    Lote</th>
                                <th class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                    Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="text-left" style="solid; black; padding: 0px; margin: 0px; width:50%; !important;">
                                    <span t-field="o.product_id"/>
                                </td>
                                <td class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                    <span t-field="o.lot_producing_id"/>
                                </td>
                                <td class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                    <span t-field="o.product_qty"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <h4><span>Productos consumidos</span></h4>
                    </div>

                    <table class="table table-sm" t-if="o.move_raw_ids">
                        <t t-set="has_product_barcode" t-value="any(m.product_id.barcode for m in o.move_raw_ids)"/>
                        <thead>
                            <tr>
                                <th class="text-left" style="solid; black; padding: 0px; margin: 0px; width:50%; !important;">
                                    Producto</th>
                                <th class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                    Lote</th>
                                <th class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                    Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-if="o.move_raw_ids">
                                <t t-foreach="o.move_raw_ids" t-as="move_line">
                                    <tr t-foreach="move_line.move_line_ids" t-as="ml">
                                        <td class="text-left" style="solid; black; padding: 0px; margin: 0px; width:50%; !important;">
                                            <span t-field="ml.product_id"/>
                                        </td>
                                        <td class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                            <span t-field="ml.lot_id"/>
                                        </td>
                                        <td class="text-left" style="solid; black; padding: 0px; margin: 0px; width:25%; !important;">
                                            <span t-field="ml.qty_done"/>
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>
                    <div class="oe_structure"/>
                </div>
            </t>
            </t>
         </template>
    </data>
</odoo>
