<odoo>
    <data>
        <!-- Herencia del tenplate del informe Factura-->
         <template id="document_format.format_report_invoice_document"
              inherit_id="account.report_invoice">
            <xpath expr='//t[@t-call="account.report_invoice_document"]' position="replace">
                <t t-call="document_format.report_invoice_gouped_by_picking_document" t-lang="lang"/>
            </xpath>
        </template>
        <!-- Fin Herencia del tenplate del informe Factura-->

        <!-- Herencia del tenplate del informe Factura sin pagos-->
         <template id="document_format.format_report_invoice_document_with_payments"
              inherit_id="account.report_invoice_with_payments">
            <xpath expr='//t[@t-call="account.report_invoice_document_with_payments"]' position="replace">
                <t t-call="document_format.report_invoice_gouped_by_picking_document" t-lang="lang"/>
            </xpath>
        </template>
        <!-- Fin Herencia del tenplate del informe Factura sin pagos-->

        <template id="document_format.report_invoice_gouped_by_picking_document">
            <t t-name="document_format.report_invoice_gouped_by_picking_document">
                <t t-call="web.external_layout">
                    <t t-set="o" t-value="o.with_context(lang=lang)" />
                    <div class="page">
                        <!-- Datos del Documento-->
                        <!-- Datos del movimiento -->
                        <div style="width:50%;float:left;clear:both;margin-top:5px;">
                            <ul class="list-unstyled">
                                <li>
                                    <h2 class="mt16">
                                        <span
                                            t-if="o.type == 'out_invoice' and o.state == 'posted'"
                                        >Factura:</span>
                                        <span
                                            t-if="o.type == 'out_invoice' and o.state == 'draft'"
                                        >Factura Borrador:</span>
                                        <span
                                            t-if="o.type == 'out_invoice' and o.state == 'cancel'"
                                        >Factura Cancelada:</span>
                                        <span
                                            t-if="o.type == 'out_refund'"
                                        >Factura Rectificativa:</span>
                                        <span
                                            t-if="o.type == 'in_refund'"
                                        >Factura Rectificativa Proveedor:</span>
                                        <span
                                            t-if="o.type == 'in_invoice'"
                                        >Factura Proveedor:</span>
                                        <span t-if="o.name != '/'" t-field="o.name" />
                                    </h2>
                                </li>
                                <li t-if="o.invoice_date" name="invoice_date">
                                    <strong>Fecha:</strong>
                                    <span class="m-0" t-esc="o.invoice_date.strftime('%d/%m/%Y')" />
                                </li>
                                <li t-if="o.invoice_origin" name="origin">
                                    <strong>Albaranes:</strong>
                                    <!--<span class="m-0" t-field="o.invoice_origin" /> -->
                                    <t t-set="lines_picking" t-value="o.lines_grouped_by_picking()"/>
                                    <t t-foreach="lines_picking" t-as="line">
                                        <t t-set="picking" t-value="line['picking']"/>
                                        <t
                                        t-set="next_picking"
                                        t-value="[lines_picking[i + 1]['picking'] for i, x in enumerate(lines_picking) if x == line and i &lt; len(lines_picking) - 1] or [False]"
                                        />
                                        <t t-if="picking != last_picking">
                                            <t t-if="picking">
                                                <span t-esc="picking.name"></span>
                                                <t t-if="next_picking[0] != False">
                                                    <span> ,</span>
                                                </t>
                                            </t>
                                        </t>
                                         <t t-set="last_picking" t-value="picking" />
                                    </t>
                                </li>
                                <li t-if="o.ref" name="reference">
                                    <strong>Referencia:</strong>
                                    <span class="m-0" t-field="o.ref" />
                                </li>
                                <li t-if="o.invoice_payment_term_id" name="reference">
                                    <strong>Forma de Pago:</strong>
                                    <span class="m-0" t-field="o.invoice_payment_term_id"/>
                                </li>
                                <li t-if="o.invoice_user_id" name="user">
                                    <strong>Comercial:</strong>
                                    <span class="m-0" t-field="o.invoice_user_id"/>
                                </li>
                                <div
                                    class="col-auto mw-100 mb-2"
                                    t-if="o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted'"
                                    name="due_date"
                                    style="display:none;"
                                >
                                    <strong>Due Date:</strong>
                                    <p class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')" />
                                </div>
                            </ul>
                        </div>
                        <!-- Fin datos del movimiento -->
                        <!-- Datos del cliente -->
                        <div style="width:50%;float:left;margin-top:5px;">
                            <ul class="list-unstyled">
                                <li t-if="o.partner_id.ref">
                                    <strong>Código Cliente:</strong>
                                    <span class="m-0" t-field="o.partner_id.ref" />
                                </li>
                                <li t-if="o.partner_id.name">
                                    <span t-field="o.partner_id.name" />
                                </li>
                                <li t-if="o.partner_id.comercial">
                                    (<span t-field="o.partner_id.comercial" />)
                                </li>
                                <li t-if="o.partner_id.street">
                                    <span t-field="o.partner_id.street" />
                                </li>
                                <li>
                                    <span
                                        t-if="o.partner_id.zip"
                                        t-field="o.partner_id.zip"
                                    />
                                    <span
                                        t-if="o.partner_id.city"
                                        t-field="o.partner_id.city"
                                    />
,
                                    <span
                                        t-if="o.partner_id.state_id"
                                        t-field="o.partner_id.state_id.name"
                                    />
                                </li>
                                <li
                                    t-if="o.partner_id.country_id and o.partner_id.country_id.name not in ['España','Spain']"
                                >
                                    <span t-field="o.partner_id.country_id.name" />
                                </li>
                                <li t-if="o.partner_id.vat">
                                    <strong>NIF:</strong>
                                    <span t-field="o.partner_id.vat" />
                                </li>
                            </ul>
                        </div>
                        <!-- Fin datos del cliente -->
                        <t
                            t-set="display_discount"
                            t-value="any([l.discount for l in o.invoice_line_ids])"
                        />
                        <table
                            class="table table-sm o_main_table"
                            name="invoice_line_table"
                            style="clear:both;"
                        >
                            <!-- Cabecera -->
                            <thead>
                                <tr>
                                    <th
                                        name="th_code"
                                        class="text-left"
                                        style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                    >
                                        Código
                                    </th>
                                    <th
                                        name="th_description"
                                        class="text-left"
                                        style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                    >
                                        Descripción
                                    </th>
                                    <th
                                        name="th_quantity"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        Unds
                                    </th>
                                    <th
                                        name="th_priceunit"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        Importe
                                    </th>
                                    <th
                                        name="th_discount"
                                        t-if="display_discount"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        groups="product.group_discount_per_so_line"
                                    >
                                        Dto.%
                                    </th>
                                    <th
                                        name="th_taxes"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    >
                                        IVA%
                                    </th>
                                    <th
                                        name="th_subtotal"
                                        class="text-right"
                                        style="solid; black; padding: 0px; margin: 0px; width:12%; font-size:0.8em; !important;"
                                    >
                                        <t groups="account.group_show_line_subtotals_tax_excluded">
                                            Total
                                        </t>
                                        <t groups="account.group_show_line_subtotals_tax_included">
                                            Total I.I.
                                        </t>
                                    </th>
                                </tr>
                            </thead>
                            <!-- Fin Cabecera -->
                            <!-- Lineas -->
                            <tbody class="invoice_tbody">
                                <!-- Variables -->
                                <t t-set="subtotal" t-value="0.0" />
                                <t
                                    t-set="lines_grouped"
                                    t-value="o.lines_grouped_by_picking()"
                                />
                                <t t-if="not lines_grouped">
                                     <t t-set="lines_grouped" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                </t>
                                <t t-set="current_subtotal" t-value="0" />
                                <t
                                    t-set="lines"
                                    t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"
                                />
                                <!-- Fin Variables -->
                                <t t-foreach="lines_grouped" t-as="lines_group">
                                    <!-- Variables FOREACH -->
                                    <t t-set="l" t-value="lines_group['line']" />
                                    <t t-set="line" t-value="lines_group['line']" />
                                    <t
                                        t-set="picking"
                                        t-value="lines_group['picking']"
                                    />
                                    <t
                                        t-set="lines_grouped"
                                        t-value="o.lines_grouped_by_picking()"
                                    />
                                    <t
                                        t-set="next_picking"
                                        t-value="[lines_grouped[i + 1]['picking'] for i, x in enumerate(lines_grouped) if x == lines_group and i &lt; len(lines_grouped) - 1] or [False]"
                                    />
                                    <!-- Fin Variables FOREACH -->
                                    <!-- Linea del Picking -->
                                    <t t-if="picking != last_picking">
                                        <tr t-if="picking">
                                            <td
                                                colspan="10"
                                                style="solid; black; padding: 0px; margin: 0px; width:30%; !important;margin-left:5px; font-size:0.8em; "
                                            >
                                                <strong>
                                                    <span>Albarán:</span>
                                                    <span t-field="picking.name" />
                                                    <span> - </span>
                                                    <span
                                                        t-esc="picking.date_done.strftime('%d/%m/%Y')"
                                                    />
                                                    <t t-if="picking.note">
                                                        <span> - </span>
                                                        <span t-field="picking.note" />
                                                    </t>
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr t-else="">
                                        </tr>
                                    </t>
                                    <!-- Fin linea del Picking -->
                                    <tr>
                                        <!-- Lineas impresión-->
                                        <t name="account_invoice_line_accountable">
                                            <td
                                                class="text-left"
                                                style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    t-field="line.product_id.default_code"
                                                />
                                            </td>
                                            <td
                                                name="account_invoice_line_name"
                                                style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                            >
                                                <t
                                                    t-set="productName"
                                                    t-value="line.name"
                                                />
                                                <t
                                                    t-set="name_num"
                                                    t-value="productName.find(']') + 1 "
                                                />
                                                <t
                                                    t-set="name"
                                                    t-value="productName[name_num:]"
                                                />
                                                <span
                                                    t-esc="name"
                                                    t-options="{'widget': 'text'}"
                                                />
                                            </td>
                                            <td
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                 <t t-if="o.type in ('out_refund','in_refund')">
                                                    <span>- </span>
                                                </t>
                                                <span
                                                    t-esc="lines_group['quantity']"
                                                    t-options='{"widget": "float", "decimal_precision": "Product Unit of Measure"}'
                                                />
                                                <span
                                                    t-field="line.product_uom_id"
                                                    groups="uom.group_uom"
                                                />
                                            </td>
                                            <td
                                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <t t-if="o.type in ('out_refund','in_refund')">
                                                    <span>- </span>
                                                </t>
                                                <span
                                                    class="text-nowrap"
                                                    t-field="line.price_unit"
                                                />
                                            </td>
                                            <td
                                                t-if="display_discount"
                                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    class="text-nowrap"
                                                    t-field="line.discount"
                                                />
                                            </td>
                                            <td
                                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <span
                                                    t-esc="', '.join(map(lambda x: str(x.amount), line.tax_ids))"
                                                    id="line_tax_ids"
                                                />
                                            </td>
                                            <td
                                                class="text-right o_price_total"
                                                style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                            >
                                                <t
                                                    t-if="lines_group['quantity'] != l.quantity"
                                                    id="picking_subtotal"
                                                    groups="!account.group_show_line_subtotals_tax_included"
                                                >
                                                    <!-- Compute subtotal for that picking with discounts -->
                                                    <t
                                                        t-set="line_picking_subtotal"
                                                        t-value="l.quantity and lines_group['quantity'] * (l.price_subtotal / l.quantity) or 0.0"
                                                    />
                                                    <t
                                                        t-set="subtotal"
                                                        t-value="(subtotal or 0.0) + line_picking_subtotal"
                                                    />
                                                    <t t-if="o.type in ('out_refund','in_refund')">
                                                    <span>- </span>
                                                </t>
                                                    <span
                                                        t-esc="line_picking_subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </t>
                                                <t t-else="">
                                                    <t
                                                        t-set="subtotal"
                                                        t-value="(subtotal or 0.0) + l.price_subtotal"
                                                    />
                                                    <t t-if="o.type in ('out_refund','in_refund')">
                                                        <span>- </span>
                                                    </t>

                                                    <span
                                                        class="text-nowrap"
                                                        t-field="line.price_subtotal"
                                                        groups="account.group_show_line_subtotals_tax_excluded"
                                                    />
                                                    <span
                                                        class="text-nowrap"
                                                        t-field="line.price_total"
                                                        groups="account.group_show_line_subtotals_tax_included"
                                                    />
                                                </t>

                                            </td>
                                            <!-- Fin lineas impresión-->
                                            <!--Subtotal -->
                                            <tr t-if="picking != next_picking[0]">
                                                <td
                                                    colspan="10"
                                                    class="text-right"
                                                    style="solid; black; padding: 0px; margin: 0px; width:30%; font-size:0.8em; !important;"
                                                >
                                                    <strong>Subtotal: </strong>
                                                    <strong>
                                                        <t t-if="o.type in ('out_refund','in_refund')">
                                                            <span>- </span>
                                                        </t>
                                                    </strong>
                                                    <strong
                                                        t-esc="subtotal"
                                                        t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    />
                                                </td>
                                                <t t-set="subtotal" t-value="0.0" />
                                            </tr>
                                            <!--Fin subtotal -->
                                            <t t-set="last_picking" t-value="picking" />
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <!-- Totales documento -->
                            <div id="total" class="row">
                                <div
                                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"
                                >
                                    <table
                                        class="table table-sm"
                                        style="page-break-inside: avoid;"
                                    >
                                        <tr class="border-black o_subtotal">
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <strong>Subtotal</strong>
                                            </td>
                                            <td
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <t t-if="o.type in ('out_refund','in_refund')">
                                                    <span>- </span>
                                                </t>
                                                <span t-field="o.amount_untaxed" />
                                            </td>
                                        </tr>
                                        <t
                                            t-foreach="o.amount_by_group"
                                            t-as="amount_by_group"
                                        >
                                            <tr
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <t
                                                    t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]"
                                                >
                                                    <td
                                                        style="solid; black; padding: 0px; margin: 0px; !important;"
                                                    >
                                                        <span
                                                            class="text-nowrap"
                                                            t-esc="amount_by_group[0]"
                                                        />
                                                    </td>
                                                    <td
                                                        class="text-right o_price_total"
                                                        style="solid; black; padding: 0px; margin: 0px; !important;"
                                                    >
                                                        <t t-if="o.type in ('out_refund','in_refund')">
                                                            <span>- </span>
                                                        </t>
                                                        <span
                                                            class="text-nowrap"
                                                            t-esc="amount_by_group[3]"
                                                        />
                                                    </td>
                                                </t>
                                                <t t-else="">
                                                    <td
                                                        style="solid; black; padding: 0px; margin: 0px; !important;"
                                                    >
                                                        <span
                                                            t-esc="amount_by_group[0]"
                                                        />
                                                        <span class="text-nowrap">en
                                                            <t
                                                                t-esc="amount_by_group[4]"
                                                            />
                                                        </span>
                                                    </td>
                                                    <td
                                                        class="text-right o_price_total"
                                                        style="solid; black; padding: 0px; margin: 0px; !important;"
                                                    >
                                                        <t t-if="o.type in ('out_refund','in_refund')">
                                                            <span>- </span>
                                                        </t>
                                                        <span
                                                            class="text-nowrap"
                                                            t-esc="amount_by_group[3]"
                                                        />
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <strong>Total</strong>
                                            </td>
                                            <td
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <strong>
                                                    <t t-if="o.type in ('out_refund','in_refund')">
                                                        <span>- </span>
                                                    </t>
                                                </strong>
                                                <strong>
                                                    <span
                                                        class="text-nowrap"
                                                        t-field="o.amount_total"
                                                    />
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <!-- Fin totales documento -->
                            <!-- Desglose de vencimientos -->
                            <t t-set="due_list" t-value="o.get_multi_due_list()" />
                            <div id="duelist" class="row">
                                <div
                                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"
                                >
                                    <table
                                        class="table table-sm"
                                        style="page-break-inside: avoid; font-size:0.8em;"
                                    >
                                        <tr>
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <b>Fecha de vencimiento</b>
                                            </td>
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                                class="text-right"
                                            >
                                                <b>Importe</b>
                                            </td>
                                        </tr>
                                        <tr t-foreach="due_list" t-as="due_tuple">
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <span
                                                    t-esc="due_tuple[0]"
                                                    t-options="{'widget': 'date'}"
                                                />
                                            </td>
                                            <td
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <span
                                                    t-esc="due_tuple[1]"
                                                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                                />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <!-- Fin desglose de vencimientos -->
                        <div style="clear:both;" />
                        <p t-if="o.narration" name="comment">
                            <span t-field="o.narration" />
                        </p>
                        <p t-if="o.invoice_payment_term_id" name="payment_term">
                            <span t-field="o.invoice_payment_term_id.note" />
                        </p>
                        <p
                            t-if="o.fiscal_position_id.note"
                            name="note"
                            style="display:none;"
                        >
                            <span t-field="o.fiscal_position_id.note" />
                        </p>
                        <div
                            id="qrcode"
                            t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)"
                            style="display:none;"
                        >
                            <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                                <strong
                                    class="text-center"
                                >Scan me with your banking app.</strong>
                                <br />
                                <br />
                                <img
                                    class="border border-dark rounded"
                                    t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual, o.invoice_payment_ref or o.ref or o.name)"
                                />
                            </p>
                            <p
                                t-if="(o.invoice_partner_bank_id.qr_code_valid == False)"
                                style="display:none;"
                            >
                                <strong
                                    class="text-center"
                                >The SEPA QR Code informations are not set correctly.</strong>
                                <br />
                            </p>
                        </div>
                    </div>
                </t>
            </t>
        </template>
