<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
       <report
            id="report_invoice_without_grouped"
            string="Factura sin Agrupar"
            model="account.move"
            report_type="qweb-pdf"
            name="document_format.report_invoice_not_grouped"
            print_report_name="(object._get_report_base_filename())"
        />
        <template id="report_invoice_not_grouped">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t
                        t-call="document_format.report_invoice_document_xtendoo"
                    />
                </t>
            </t>
        </template>

        <template id="document_format.report_invoice_document_xtendoo">
            <t t-name="account.report_invoice_document">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Datos del Documento-->
                    <!-- Datos del movimiento -->
                    <div style="width:50%;float:left;margin-top:5px;">
                        <ul class="list-unstyled">
                            <li>
                                <h4 class="mt16">
                                    <span t-if=" o.move_type == 'out_invoice' and o.state == 'posted'">
                                        Factura:
                                    </span>
                                    <span t-if=" o.move_type == 'out_invoice' and o.state == 'draft'">
                                        Factura Borrador:
                                    </span>
                                    <span t-if=" o.move_type == 'out_invoice' and o.state == 'cancel'">
                                        Factura Cancelada:
                                    </span>
                                    <span t-if=" o.move_type == 'out_refund'">
                                        Factura Rectificativa:
                                    </span>
                                    <span t-if=" o.move_type == 'in_refund'">
                                        Factura Rectificativa Proveedor:
                                    </span>
                                    <span t-if=" o.move_type == 'in_invoice'">
                                        Factura Proveedor:
                                    </span>
                                    <span t-if="o.name != '/'" t-field="o.name"/>
                                </h4>
                            </li>
                            <li t-if="o.invoice_date" name="invoice_date">
                                <strong>Fecha:</strong>
                                <span class="m-0" t-esc="o.invoice_date.strftime('%d/%m/%Y')"/>
                            </li>
                            <li t-if="o.invoice_origin" name="origin">
                                <strong>Pedido:</strong>
                                <span class="m-0" t-field="o.invoice_origin"/>
                            </li>
                            <li t-if="o.ref" name="reference">
                                <strong>Referencia:</strong>
                                <span class="m-0" t-field="o.ref"/>
                            </li>
                            <li t-if="o.invoice_payment_term_id" name="reference">
                                <strong>Forma de Pago:</strong>
                                <span class="m-0" t-field="o.invoice_payment_term_id"/>
                            </li>
                            <div class="col-auto mw-100 mb-2"
                                 t-if="o.invoice_date_due and  o.move_type == 'out_invoice' and o.state == 'posted'"
                                 name="due_date"
                                 style="display:none;">
                                <strong>Due Date:</strong>
                                <p class="m-0" t-esc="o.invoice_date_due.strftime('%d/%m/%Y')"/>
                            </div>
                        </ul>
                    </div>
                    <!-- Fin datos del movimiento -->
                    <!-- Datos del cliente -->
                    <div style="width:50%;float:left;margin-top:5px;">
                        <ul class="list-unstyled">
                            <li t-if="o.partner_id.ref">
                                <strong>C칩digo Cliente:</strong>
                                <span class="m-0" t-field="o.partner_id.ref"/>
                            </li>
                            <li t-if="o.partner_id.name">
                                <span t-field="o.partner_id.name"/>
                            </li>
                            <li t-if="o.partner_id.street">
                                <span t-field="o.partner_id.street"/>
                            </li>
                            <li>
                                <span
                                    t-if="o.partner_id.zip"
                                    t-field="o.partner_id.zip"
                                />
                                <span
                                    t-if="o.partner_id.city"
                                    t-field="o.partner_id.city"
                                />
                                ,
                                <span
                                    t-if="o.partner_id.state_id"
                                    t-field="o.partner_id.state_id.name"
                                />
                            </li>
                            <li
                                t-if="o.partner_id.country_id and o.partner_id.country_id.name not in ['Espa침a','Spain']"
                            >
                                <span t-field="o.partner_id.country_id.name"/>
                            </li>
                            <li t-if="o.partner_id.vat">
                                <strong>NIF:</strong>
                                <span t-field="o.partner_id.vat"/>
                            </li>
                        </ul>
                    </div>
                    <!-- Fin datos del cliente -->

                    <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>

                    <table class="table table-sm o_main_table" name="invoice_line_table" style="clear:both;">
                        <!-- Cabecera -->
                        <thead>
                            <tr>
                                <th
                                    name="th_code"
                                    class="text-left"
                                    style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                >
                                    C칩digo
                                </th>
                                <th
                                    name="th_description"
                                    class="text-left"
                                    style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                >
                                    Descripci칩n
                                </th>
                                <th
                                    name="th_quantity"
                                    class="text-right"
                                    style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                >
                                    Unds
                                </th>
                                <th
                                    name="th_priceunit"
                                    class="text-right"
                                    style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                >
                                    Importe
                                </th>
                                <th
                                    name="th_discount"
                                    t-if="display_discount"
                                    class="text-right"
                                    style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                    groups="product.group_discount_per_so_line"
                                >
                                    Dto.%
                                </th>
                                <th
                                    name="th_taxes"
                                    class="text-right"
                                    style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                >
                                    IVA%
                                </th>
                                <th
                                    name="th_subtotal"
                                    class="text-right"
                                    style="solid; black; padding: 0px; margin: 0px; width:12%; font-size:0.8em; !important;"
                                >
                                    <t groups="account.group_show_line_subtotals_tax_excluded">
                                        Total
                                    </t>
                                    <t groups="account.group_show_line_subtotals_tax_included">
                                        Total I.I.
                                    </t>
                                </th>
                            </tr>
                        </thead>
                        <!-- Fin cabecera -->
                        <!-- Lineas -->
                        <tbody class="invoice_tbody">
                            <!-- Variables -->
                            <t t-set="current_subtotal" t-value="0"/>
                            <t
                                t-set="lines"
                                t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"
                            />
                            <!-- Fin variables -->
                            <t t-foreach="lines" t-as="line">
                                <!-- Variables FOREACH-->
                                <t
                                    t-set="current_subtotal"
                                    t-value="current_subtotal + line.price_subtotal"
                                    groups="account.group_show_line_subtotals_tax_excluded"
                                />
                                <t
                                    t-set="current_subtotal"
                                    t-value="current_subtotal + line.price_total"
                                    groups="account.group_show_line_subtotals_tax_included"
                                />
                                <!-- Fin variables FOREACH-->
                                <!-- Lineas impresi칩n-->
                                <tr
                                    t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                >
                                    <t
                                        t-if="not line.display_type"
                                        name="account_invoice_line_accountable"
                                    >
                                        <td
                                            class="text-left"
                                            style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                        >
                                            <span
                                                t-field="line.product_id.default_code"
                                            />
                                        </td>
                                        <td
                                            name="account_invoice_line_name"
                                            style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                        >
                                            <t
                                                t-set="productName"
                                                t-value="line.name"
                                            />
                                            <t
                                                t-set="name_num"
                                                t-value="productName.find(']') + 1 "
                                            />
                                            <t
                                                t-set="name"
                                                t-value="productName[name_num:]"
                                            />
                                            <span
                                                t-esc="name"
                                                t-options="{'widget': 'text'}"
                                            />
                                        </td>
                                        <td
                                            class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            <t t-if=" o.move_type in ('out_refund','in_refund')">
                                                <span>- </span>
                                            </t>
                                            <span t-field="line.quantity"/>
                                            <span
                                                t-field="line.product_uom_id"
                                                groups="uom.group_uom"
                                            />
                                        </td>
                                        <td
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            <t t-if=" o.move_type in ('out_refund','in_refund')">
                                                <span>- </span>
                                            </t>
                                            <span
                                                class="text-nowrap"
                                                t-field="line.price_unit"
                                            />
                                        </td>
                                        <td
                                            t-if="display_discount"
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            <span
                                                class="text-nowrap"
                                                t-field="line.discount"
                                            />
                                        </td>
                                        <td
                                            t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            <span
                                                t-esc="', '.join(map(lambda x: str(x.amount), line.tax_ids))"
                                                id="line_tax_ids"
                                            />
                                        </td>
                                        <td
                                            class="text-right o_price_total"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            <t t-if=" o.move_type in ('out_refund','in_refund')">
                                                <span>- </span>
                                            </t>
                                            <span
                                                class="text-nowrap"
                                                t-field="line.price_subtotal"
                                                groups="account.group_show_line_subtotals_tax_excluded"
                                            />
                                            <span
                                                class="text-nowrap"
                                                t-field="line.price_total"
                                                groups="account.group_show_line_subtotals_tax_included"
                                            />
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td
                                            colspan="99"
                                            style="solid; black; padding: 0px; margin: 0px; font-size:0.8em; !important;"
                                        >
                                            <span
                                                t-field="line.name"
                                                t-options="{'widget': 'text'}"
                                            />
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td
                                            colspan="99"
                                            style="solid; black; padding: 0px; margin: 0px; font-size:0.8em; !important;"
                                        >
                                            <span
                                                t-field="line.name"
                                                t-options="{'widget': 'text'}"
                                            />
                                        </td>
                                    </t>
                                </tr>
                                <!-- Fin lineas impresi칩n-->
                                <!-- Subtotal impresi칩n -->
                                <t
                                    t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')"
                                >
                                    <tr class="is-subtotal text-right">
                                        <td
                                            colspan="99"
                                            style="solid; black; padding: 0px; margin: 0px; font-size:0.8em; !important;"
                                        >
                                            <strong class="mr16">Subtotal</strong>
                                             <t t-if=" o.move_type in ('out_refund','in_refund')">
                                                <span>- </span>
                                            </t>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"
                                            />
                                        </td>
                                    </tr>
                                </t>
                                <!-- Fin subtotal impresi칩n -->
                            </t>
                        </tbody>
                        <!-- Fin lineas -->
                    </table>

                    <div class="clearfix">
                        <!-- Totales documento -->
                        <div id="total" class="row">
                            <div
                                t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"
                            >
                                <table
                                    class="table table-sm"
                                    style="page-break-inside: avoid;"
                                >
                                    <!--Totales-->
                                    <t t-set="tax_totals" t-value="json.loads(o.tax_totals_json)"/>
                                    <t t-call="account.document_tax_totals"/>
                                    <!--Fin de Tax-->
                                </table>
                            </div>
                        </div>
                        <!-- Fin totales documento -->
                        <!-- Desglose de vencimientos -->
                        <t t-set="due_list" t-value="o.get_multi_due_list()"/>
                        <t t-if="due_list">
                            <div id="duelist" class="row">
                                <div
                                    t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto"
                                >
                                    <table
                                        class="table table-sm"
                                        style="page-break-inside: avoid;font-size:0.9em;"
                                    >
                                        <tr>
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <b>Fecha de vencimiento</b>
                                            </td>
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                                class="text-right"
                                            >
                                                <b>Importe</b>
                                            </td>
                                        </tr>
                                        <tr t-foreach="due_list" t-as="due_tuple">
                                            <td
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <span
                                                    t-esc="due_tuple[0]"
                                                    t-options="{'widget': 'date'}"
                                                />
                                            </td>
                                            <td
                                                class="text-right"
                                                style="solid; black; padding: 0px; margin: 0px; !important;"
                                            >
                                                <span
                                                    t-esc="due_tuple[1]"
                                                    t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                                />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </t>
                        <!-- Fin desglose de vencimientos -->
                    </div>
                    <div style="clear:both;"/>
                    <p t-if="o.narration" name="comment">
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p
                        t-if="o.fiscal_position_id.note"
                        name="note"
                        style="display:none;"
                    >
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <div
                        id="qrcode"
                        t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)"
                        style="display:none;"
                    >
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                            <strong
                                class="text-center"
                            >Scan me with your banking app.
                            </strong>
                            <br/>
                            <br/>
                            <img
                                class="border border-dark rounded"
                                t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual, o.invoice_payment_ref or o.ref or o.name)"
                            />
                        </p>
                        <p
                            t-if="(o.invoice_partner_bank_id.qr_code_valid == False)"
                            style="display:none;"
                        >
                            <strong
                                class="text-center"
                            >The SEPA QR Code informations are not set correctly.
                            </strong>
                            <br/>
                        </p>
                    </div>
                </div>
            </t>
        </t>
        </template>
    </data>
</odoo>
