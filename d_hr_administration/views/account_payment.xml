<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="d_hr_administration.view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <field name="payment_date" position="before">
                    <field name="lock_date" invisible="1"/>
                </field>
                <field name="payment_date" position="attributes">
                    <attribute name="attrs">{'readonly': [('lock_date', '=', True)]}</attribute>
                </field>                
            </field>
        </record>

    </data>
</odoo>
