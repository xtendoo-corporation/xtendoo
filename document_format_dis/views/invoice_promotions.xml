<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>

        <report id="report_invoice_promotions"
                string="Factura"
                model="account.invoice"
                report_type="qweb-pdf"
                name="document_format_hr.report_invoice_promotions"
                file="account.report_invoice_promotions"
                print_report_name="(object._get_report_base_filename())"
        />

        <template id="report_invoice_promotions">

            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang" t-value="o.user_id.lang if o.type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="document_format_hr.report_invoice_document_without_promotions" t-lang="lang"/>
                    <t t-call="document_format_hr.report_invoice_document_promotions" t-lang="lang"/>
                </t>
            </t>

        </template>
    </data>
</odoo>