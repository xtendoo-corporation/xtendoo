<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ebay_condition_form_view" model="ir.ui.view">
        <field name="name">eBay Condition</field>
        <field name="model">ebay.condition.ept</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group string="Basic Details">
                        <group>
                            <field name="name"/>
                            <field name="condition_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="category_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
