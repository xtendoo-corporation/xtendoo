<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="view_sales_order_ebay_filter" model="ir.ui.view">
        <field name="name">sale.order.list.select.ebay</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="selling_manager_sales_record_number"/>
            </xpath>
            <xpath expr="//filter[@name='customer']" position="before">
                <filter string="Order Updated In eBay" name="updated_in_ebay"
                        domain="[('updated_in_ebay', '=', True)]"/>
                <filter string="eBay Seller" name="ebay_seller_id" domain="[]" context="{'group_by':'ebay_seller_id'}"/>
                <filter string="eBay Site" name="ebay_instance_id" domain="[]"
                        context="{'group_by':'ebay_instance_id'}"/>
            </xpath>
        </field>
    </record>

    <record id="view_order_tree_ebay_ept" model="ir.ui.view">
        <field name="name">sale.order.tree</field>
        <field name="model">sale.order</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <tree create="false">
<!--                <field name="message_unread" invisible="1"/>-->
                <field name="name" string="Order Number"/>
                <field name="date_order"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="ebay_site_id"/>
                <field name="amount_total" sum="Total Tax Included"/>
                <field name="state"/>
                <field name="updated_in_ebay"/>
            </tree>
        </field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <data>
                <notebook position="inside">
                    <page string="eBay Information" attrs="{'invisible':[('ebay_instance_id','=',False)]}">
                        <group>
                            <group>
                                <field name="ebay_order_id" readonly="True"/>
                                <field name="selling_manager_sales_record_number" readonly="True"/>
                                <field name="ebay_instance_id" readonly="True"/>
                                <field name="ebay_buyer_id" readonly="True"/><!-- add by bhavesh jadav 09/08/2019 -->
                                <field name="is_ebay_remit_tax" readonly="True"/>
                            </group>
                            <group>
                                <field name="shipping_id" readonly="True"/>
                                <field name="auto_workflow_process_id" readonly="True"/>
                                <field name="ebay_payment_option_id" readonly="True"/>
                            </group>
                        </group>
                    </page>

                    <page string="eBay FeedBack" attrs="{'invisible':[('feedback_ids','=',[])]}">
                        <group>
                            <field name="feedback_ids" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
            </data>
        </field>
    </record>

    <record id="action_ebay_sale_quotation" model="ir.actions.act_window">
        <field name="name">eBay Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"not_ebay_order":False}</field>
        <field name="domain">[('ebay_order_id','!=',False),('state','in',('draft','sent','cancel'))]</field>
        <field name="view_id" ref="view_order_tree_ebay_ept"/>
        <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_neutral_face">
                eBay Quotation
            </p>
            <p>
                You can't create Sale Quotation manually and push it to eBay. Through only import Sale Quotation from
                any of your eBay Instance, you can see your Quotation here.Import Sale Quotation can be performed by 2
                ways.
            </p>
            <p>
                <b>1.</b>
                Via automatic jobs to import Sale Quotation at frequent amount of time.
                <br/>
                Go to menu Settings
                <i class="fa fa-angle-double-right"/>
                Technical
                <i class="fa fa-angle-double-right"/>
                Automation
                <i class="fa fa-angle-double-right"/>
                Schedule Actions and activate automatic Job for Import Quotation from eBay.
                However from eBay settings you can set your preferred timings for auto import Sale Quotation from eBay.
            </p>
            <p>
                <b>2.</b>
                Manually Import Orders at any time
                <br/>
                Go to menu eBay
                <i class="fa fa-angle-double-right"/>
                Processes
                <i class="fa fa-angle-double-right"/>
                eBay Operations and select your instances and option "Import Orders".
                Clicking on "Execute" button will import all <b>Open</b> orders from eBay to ERP.
            </p>
            <p>
                <b>3.</b>
                At the time of import order,you must configure workflow order status.
                <br/>
                Go to eBay<i class="fa fa-angle-double-right"/>Configuration
                <i class="fa fa-angle-double-right"/>
                Sale Auto Workflow Configuration
            </p>
        </field>
    </record>

    <record id="action_ebay_sales_orders" model="ir.actions.act_window">
        <field name="name">eBay Sale Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{"not_ebay_order":False}</field>
        <field name="domain">[('ebay_order_id','!=',False),('state','not in',('draft','sent','cancel'))]</field>
        <field name="view_id" ref="view_order_tree_ebay_ept"/>
        <field name="search_view_id" ref="sale.view_sales_order_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_neutral_face">
                eBay Sale Order
            </p>
            <p>
                You can't create Sale Order manually and push it to eBay. Through only import Sale Order from
                any of your eBay Instance, you can see your Orders here.Import Sale Order can be performed by 2 ways.
            </p>
            <p>
                <b>1.</b>
                Via automatic jobs to import Sale Orders at frequent amount of time.
                <br/>
                Go to menu Settings
                <i class="fa fa-angle-double-right"/>
                Technical
                <i class="fa fa-angle-double-right"/>
                Automation
                <i class="fa fa-angle-double-right"/>
                Schedule Actions and activate automatic Job for Import Order from eBay.
                However from eBay settings you can set your preferred timings for auto import Sale Order from eBay.
            </p>
            <p>
                <b>2.</b>
                Manually Import Orders at any time
                <br/>
                Go to menu eBay
                <i class="fa fa-angle-double-right"/>
                Processes
                <i class="fa fa-angle-double-right"/>
                eBay Operations and select your
                instances and option "Import Sale Order".
                Clicking on "Execute" button will import all
                <b>Unshipped/Partial Shipped</b>
                orders from eBay to ERP.
            </p>
            <p>
                <b>3.</b>
                At the time of import order,you must configure workflow order status.
                <br/>
                Go to eBay
                <i class="fa fa-angle-double-right"/>
                Configuration
                <i class="fa fa-angle-double-right"/>
                Sale Auto Workflow Configuration
            </p>
        </field>
    </record>

    <!--Action of sale quotation-->
    <record id="action_ebay_instance_sale_quotation"
            model="ir.actions.act_window">
        <field name="name">eBay Quotations</field>
        <field name="res_model">sale.order</field>
        <field name="view_id" ref="view_order_tree_ebay_ept"/>
        <field name="domain">
            [('ebay_order_id','!=',False),('state','in',('draft','sent','cancel')),('ebay_instance_id','=',active_id)]
        </field>
    </record>

    <!--Action of eBay sale order-->
    <record id="action_ebay_instance_sales_order_only"
            model="ir.actions.act_window">
        <field name="name">eBay Sales Order</field>
        <field name="res_model">sale.order</field>
        <field name="view_id" ref="view_order_tree_ebay_ept"/>
        <field name="domain">[('ebay_order_id','!=',False),
            ('state','not in',('draft','sent','cancel')),('ebay_instance_id','=',active_id)]
        </field>
    </record>

    <!-- Top Menu Section -->
    <menuitem id="menu_ebayerp_sales_orders" name="Sales" parent="ebay_instance_menu_item" sequence="1"/>
    <!-- Child Menu Section -->
    <!-- Sales: Child Menu Orders -->
    <menuitem id="ebay_sale_orders_child_orders_menu" name="Orders" parent="menu_ebayerp_sales_orders" sequence="1"/>
    <menuitem id="menu_quotations" name="Quotations" parent="ebay_sale_orders_child_orders_menu"
              action="action_ebay_sale_quotation" sequence="1"/>
    <menuitem id="menu_orders" name="Orders" parent="ebay_sale_orders_child_orders_menu"
              action="action_ebay_sales_orders" sequence="2"/>
</odoo>
