<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <record id="sale_inline_discount_form" model="ir.ui.view">
        <field name="name">sale.inline.discount.form</field>
        <field name="model">sale.inline.discount</field>
        <field name="arch" type="xml">
            <form>
                <sheet name="Sale Discount">
                    <div class="oe_title">
                        <h1>
                            <field name="name" string="Nombre"/>
                        </h1>
                    </div>
                        <group>
                            <group
                            name="discount_information"
                            string="Información del descuento"
                        >
                                <field name="description"/>
                                <field name="percentage" />
                            </group>
                        </group>
                </sheet>
                <!-- Add chatter and followers widget -->
            </form>
        </field>
    </record>
    <record id="sale_inline_discount_tree" model="ir.ui.view">
        <field name="name">sale.inline.discount.tree</field>
        <field name="model">sale.inline.discount</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="percentage"/>
                </tree>
        </field>
    </record>
    <record id="action_sale_inline_discount" model="ir.actions.act_window">
        <field name="name">Descuentos en Línea</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.inline.discount</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="context">{'module' : 'sale'}</field>
    </record>
    <menuitem
        id="menu_sale_inline_discount"
        name="Descuentos en linea"
        parent="sale.menu_sale_config"
        action="action_sale_inline_discount"
    />
</odoo>
