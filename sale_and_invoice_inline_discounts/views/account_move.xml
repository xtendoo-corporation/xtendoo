<?xml version="1.0" encoding="utf-8"?>
<odoo>

      <record id="account_move_inline_discount_view" model="ir.ui.view">
        <field name="name">account.move.inline.discount.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="after">
                <field name="account_line_discount_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                       optional="show"
                />
            </xpath>
        </field>
    </record>

</odoo>
