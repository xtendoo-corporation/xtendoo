<odoo>
    <data>
        <!--Formato de papel -->
        <record id="label_xtendoo_3x3" model="report.paperformat">
            <field name="name">Label xtendoo 3x3</field>
            <field name="default" eval="False" />
            <field name="format">custom</field>
            <field name="margin_top">3.50</field>
            <field name="margin_bottom">0</field>
            <field name="margin_right">0</field>
            <field name="margin_left">0</field>
            <field name="page_height">30</field>
            <field name="page_width">30</field>
            <field name="orientation">Portrait</field>
            <field name="header_line">False</field>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        <!--Fin formato de papel -->
        <template
            id="document_format_xtendoo.report_simple_label_xtendoo"
            inherit_id="product.report_simple_label"
        >
            <xpath expr="//div" position="replace">
                <div class="page">
                    <div style="width:100%;">
                        <div style="font-size:0.7em;text-align:center;">
                            <span t-field="product.name" />
                        </div>
                        <div class="text-center align-middle">
                            <t t-if="product.barcode">
                                <img
                                    alt="Barcode"
                                    t-if="len(product.barcode) == 13"
                                    t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(product.barcode or ''), 600, 150)"
                                    style="width:100%;height::4rem;"
                                />
                                <img
                                    alt="Barcode"
                                    t-elif="len(product.barcode) == 8"
                                    t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(product.barcode or ''), 600, 150)"
                                    style="width:100%;height::4rem;"
                                />
                                <img
                                    alt="Barcode"
                                    t-else=""
                                    t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(product.barcode or ''), 600, 150)"
                                    style="width:100%;height::4rem;"
                                />
                                <span
                                    style="font-size:0.7em;"
                                    t-field="product.barcode"
                                />
                            </t>
                            <t t-else="">
                                <span class="text-muted">No barcode available</span>
                            </t>
                        </div>
                        <div style="text-align:center;font-size:0.8em;">
                            <span
                                t-field="product.list_price"
                                t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: product.currency_id}"
                            />
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</odoo>
