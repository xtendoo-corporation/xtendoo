<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>

        <record id="bluetooth_saleorder" model="report.paperformat">
            <field name="name">Bluetooth saleorder</field>
            <field name="default" eval="False"/>
            <field name="format">custom</field>
            <field name="margin_top">10</field>
            <field name="margin_bottom">3</field>
            <field name="margin_right">1.5</field>
            <field name="margin_left">1.5</field>
            <field name="page_height">500</field>
            <field name="page_width">80</field>
            <field name="orientation">Portrait</field>
            <field name="header_line">False</field>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <report id="report_saleorder_bluetooh"
                string="Presupuesto / Pedido Bluetooth"
                model="sale.order"
                report_type="qweb-pdf"
                name="document_format_ch.report_saleorder_bluetooth"
                file="sale.report_saleorder_document"
                print_report_name="(object.state in ('draft', 'sent') and 'Quotation - %s' % (object.name)) or 'Order - %s' % (object.name)"
        />

        <record id="document_format_ch.report_saleorder_bluetooh" model="ir.actions.report">
            <field name="paperformat_id" ref="document_format_ch.bluetooth_saleorder"/>
        </record>

        <template id="report_saleorder_bluetooth">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="document_format_ch.report_saleorder_document_bluetooth" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>

        <template id="report_saleorder_document_bluetooth">

            <t t-name="sale.report_saleorder_document_bluetooth">

                <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
                <div style="display:none;">
                    <t t-set="address">
                        <div t-field="doc.partner_id"
                             t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: True}"
                             style="display:none;"/>
                        <p t-if="doc.partner_id.vat" style="display:none;"><t
                                t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>:
                            <span t-field="doc.partner_id.vat"/>
                        </p>
                    </t>
                </div>
                <div style="display:none;">
                    <t t-if="doc.partner_shipping_id == doc.partner_invoice_id and doc.partner_invoice_id != doc.partner_id or doc.partner_shipping_id != doc.partner_invoice_id">
                        <t t-set="information_block">
                            <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping
                                address:
                            </strong>
                            <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address:</strong>
                            <div t-field="doc.partner_invoice_id"
                                 t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            <t t-if="doc.partner_shipping_id != doc.partner_invoice_id">
                                <strong>Shipping address:</strong>
                                <div t-field="doc.partner_shipping_id"
                                     t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;, &quot;phone&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}"/>
                            </t>
                        </t>
                    </t>
                </div>
                <div class="page">
                    <div class="oe_structure"/>

                    <!-- Cabecera documento -->

                    <div class="col-6" style="display:block; width:80%; margin:25px auto;">
                        <img t-if="res_company.logo"
                             t-att-src="image_data_uri(res_company.logo)" alt="Logo"
                             style="width:100%"/>
                    </div>

                    <div style="font-size:1em;font-weight:bolder;text-align:center;">

                        <div>
                            <span t-if="res_company.name" t-field="res_company.name"/>
                        </div>

                        <div>
                            C/<span t-if="res_company.street"
                                    t-field="res_company.street"/>.
                            <span t-if="res_company.zip" t-field="res_company.zip"/>
                            <span t-if="res_company.city" t-field="res_company.city"/>
                        </div>

                        <div>
                            <!--<span t-if="res_company.zip" t-field="res_company.zip"/> <span t-if="res_company.city" t-field="res_company.city"/>
                          (<span t-if="res_company.state_id.name" t-field="res_company.state_id.name"/>)-->
                        </div>

                        <div>
                            <div t-if="res_company.phone" style="width:50%;float:left;">
                                <div style="text-align:right;margin-right:5px;">
                                    <span>TLF.:</span>
                                    <span t-field="res_company.phone"/>
                                </div>
                            </div>

                            <div t-if="res_company.vat" style="width:50%;float:left;">
                                <div style="text-align:left;margin-left:5px;">
                                    <span>N.I.F.:</span>
                                    <span t-field="res_company.vat"/>
                                </div>
                            </div>

                        </div>

                    </div>

                    <!-- Fin Cabecera documento -->

                    <hr style="height:3px; background-color:black;clear:both;"></hr>

                    <!-- Datos del cliente -->

                    <div style="font-size:1em;font-weight:bolder;">
                        <div t-if="doc.partner_id.name">
                            <span t-field="doc.partner_id.name"/>
                        </div>

                        <div t-if="doc.partner_id.street">
                            C/
                            <span t-field="doc.partner_id.street"/>
                        </div>

                        <div>
                            <div t-if="doc.partner_id.phone" style="width:50%;float:left;">
                                <div>
                                    <span>TLF.:</span>
                                    <span t-field="doc.partner_id.phone"/>
                                </div>
                            </div>

                            <div t-if="doc.partner_id.vat" style="width:50%;float:left;">
                                <div>
                                    <span>N.I.F.:</span>
                                    <span t-field="doc.partner_id.vat"/>
                                </div>
                            </div>

                        </div>

                    </div>

                    <!-- Fin datos cliente -->

                    <!-- Datos de factura -->

                    <!-- Nombre del documento -->

                    <div style="width:50%; float:left;font-weight:bolder; margin-top:25px;clear:both;">

                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span t-if="doc.state not in ['draft','sent']">Order</span>
                            <span t-if="doc.state in ['draft','sent']">Quotation</span>
                        </t>

                        <t t-if="env.context.get('proforma', False) or is_pro_forma">
                            <span>Pro-Forma Invoice</span>
                        </t>

                        <div>
                            <span t-field="doc.name"/>
                        </div>

                    </div>

                    <!-- Fin Nombre documento -->

                    <!-- Fecha documento -->

                    <div style="width:50%; float:left;font-weight:bolder; margin-top:25px;text-align:center;">

                        <div class="col-auto mw-100 mb-2">
                            <strong>Fecha:</strong>
                            <div>
                                <span class="m-0" t-field="doc.date_order"
                                      t-options="{&quot;format&quot;: &quot;MM-dd-yyyy&quot;}"/>
                            </div>
                        </div>

                    </div>

                    <!-- Fin fecha documento -->

                    <!-- Comercial -->

                    <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2"
                         style="clear:both;font-weight:bolder; margin-top:10px;">

                        <strong>Salesperson:</strong>
                        <div>
                            <span class="m-0" t-field="doc.user_id"/>
                        </div>

                    </div>

                    <!-- Fin comercial -->

                    <div class="row mt32 mb32" id="informations" style="display:none;">

                        <div t-if="doc.client_order_ref" class="col-auto mw-100 mb-2">
                            <strong>Your Reference:</strong>
                            <p class="m-0" t-field="doc.client_order_ref"/>
                        </div>

                        <div t-if="doc.confirmation_date and doc.state not in ['draft','sent']"
                             class="col-auto mw-100 mb-2">
                            <strong>Date Ordered:</strong>
                            <p class="m-0" t-field="doc.confirmation_date"/>
                        </div>

                        <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto mw-100 mb-2">
                            <strong>Quotation Date:</strong>
                            <p class="m-0" t-field="doc.date_order"/>
                        </div>

                        <div t-if="doc.user_id.name" class="col-auto mw-100 mb-2">
                            <strong>Salesperson:</strong>
                            <p class="m-0" t-field="doc.user_id"/>
                        </div>

                        <div name="payment_term" t-if="doc.payment_term_id" class="col-auto mw-100 mb-2">
                            <strong>Payment Terms:</strong>
                            <p class="m-0" t-field="doc.payment_term_id"/>
                        </div>

                        <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto mw-100 mb-2">
                            <strong>Expiration Date:</strong>
                            <p class="m-0" t-field="doc.validity_date"/>
                        </div>

                    </div>

                    <!-- Productos -->

                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                    <table class="table table-sm o_main_table" style="width:100%;font-size:0.9em;margin-top:15px;">
                        <thead>

                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="5"/>

                                <th class="text-left">
                                    Description
                                </th>

                                <th class="text-left">
                                    Cant
                                </th>

                                <th class="text-right">
                                    Precio/U
                                </th>

                                <th class="text-right">
                                    <t groups="account.group_show_line_subtotals_tax_excluded">Importe</t>
                                </th>

                            </tr>

                        </thead>

                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                                   groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                                   groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">

                                        <!-- Descripcion -->

                                        <td>
                                            <span t-field="line.name"/>
                                        </td>

                                        <!-- Fin descripcion -->

                                        <!-- cantidad -->

                                        <td class="text-right">
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom" groups="uom.group_uom"/>
                                        </td>

                                        <!-- fin cantidad -->

                                        <!-- Precio/u -->

                                        <td style="text-align:right;">
                                            <span t-field="line.price_unit"/>
                                        </td>

                                        <!-- Fin Precio/u -->

                                        <!-- SubTotal -->

                                        <td class="text-right o_price_total">
                                            <span t-field="line.price_subtotal"
                                                  groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total"
                                                  groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>

                                        <!-- Fin Subtotal -->

                                    </t>

                                </tr>

                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">

                                    <tr class="is-subtotal text-right">

                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span t-esc="current_subtotal"
                                                  t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                        </td>

                                    </tr>

                                </t>

                            </t>

                        </tbody>

                    </table>

                    <!-- Fin productos -->

                    <hr style="height:3px; background-color:black;clear:both;"></hr>

                    <!-- Totales -->

                    <div style="width:50%;margin-left:50%;margin-bottom:10px;margin-top:10px;text-align:right;">

                        <!-- Subtotal -->

                        <div>
                            <div style="width:50%;float:left;text-align:left;">
                                <span style="font-weight:bolder;">SubTotal</span>
                            </div>

                            <div style="width:50%;float:left;">
                                <span t-field="doc.amount_untaxed"/>
                            </div>

                        </div>

                        <!-- Fin subtotal -->

                        <!-- Iva -->

                        <div style="clear:both;">

                            <t t-foreach="doc.amount_by_group" t-as="amount_by_group">

                                <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                </t>
                                <t t-else="">
                                    <div style="width:50%;float:left;text-align:left;">
                                        <span t-esc="amount_by_group[0]"/>
                                    </div>

                                    <div style="width:50%;float:left;">
                                        <span t-esc="amount_by_group[1]"
                                              t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                    </div>

                                </t>

                            </t>

                        </div>

                        <!-- Fin iva -->

                        <!-- Total documento -->

                        <div style="clear:both;">

                            <div style="width:50%;float:left;text-align:left;">
                                <span style="font-weight:bolder;">Total</span>
                            </div>

                            <div style="width:50%;float:left;">
                                <span t-field="doc.amount_total"/>
                            </div>

                        </div>

                        <div style="clear:both;height:10px;"></div>

                        <!-- Fin total documento -->

                        <hr style="height:3px; background-color:black;clear:both;"></hr>

                    </div>

                    <!-- Fin totales -->

                    <!-- Footer empresa -->
                    <!--
                              <div style="padding-bottom:30px; text-align:center;">
                                <span>Footer de la empresa</span>

                              </div>
                    -->

                    <!-- fin footer empresa -->

                    <div style="clear:both;height:10px;"></div>

                    <p t-field="doc.note"/>
                    <p t-if="doc.payment_term_id.note">
                        <span t-field="doc.payment_term_id.note"/>
                    </p>
                    <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                        <strong>Fiscal Position Remark:</strong>
                        <span t-field="doc.fiscal_position_id.sudo().note"/>
                    </p>

                    <div t-if="doc.signature" class="mt32 ml16 mr16" name="signature">
                        <div class="offset-8">
                            <strong>Signature</strong>
                        </div>
                        <div class="offset-8">
                            <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                        </div>
                        <div class="offset-8 text-center">
                            <p t-field="doc.signed_by"/>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                </div>

            </t>


        </template>

    </data>

</odoo>