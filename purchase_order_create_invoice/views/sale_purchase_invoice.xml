<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- 		for sale order -->
        <record id="action_view_multiple_sale_one_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Create Single Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">multiple.sale.one.invoice.wizard</field>
            <field name="view_id" ref="view_multiple_invoice_sale_wizard_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="sale.model_sale_order"/>
        </record>

        <!-- 		for purchase order -->
        <record id="action_view_multiple_purchase_one_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Create Single Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">multiple.purchase.one.invoice.wizard</field>
            <field name="view_id" ref="view_multiple_invoice_purchase_wizard_form"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        </record>

    </data>
</odoo>
