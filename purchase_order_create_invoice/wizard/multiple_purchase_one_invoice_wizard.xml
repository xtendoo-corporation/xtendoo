<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="view_multiple_invoice_purchase_wizard_form" model="ir.ui.view">
            <field name="name">multiple.purchase.one.invoice.wizard.form</field>
            <field name="model">multiple.purchase.one.invoice.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <p class="oe_grey">
                        Invoices will be created in draft so that you can review
                        them before validation.
                    </p>
                    <footer>
                        <button
                            string="Create and View Invoices"
                            class="oe_highlight"
                            name="create_invoices_for_purchase_order"
                            type="object"
                        />
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
