<?xml version="1.0" ?>
<odoo>
    <record id="gestool_import_view" model="ir.ui.view">
        <field name="name">Gestool Import</field>
        <field name="model">gestool.import</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form string="Importador desde Gestool">
                <h2>Selecciona ficheros a importar</h2>
                <br/>
                <h5>Seleccione fichero de Agentes</h5>
                <!--agentes-->
                <field
                    name="data_file_agentes"
                    filename="filename"
                    placeholder="Choose a file to import..."
                />
                <field name="filename" invisible="1" />
                <br/>
                <h5>Seleccione fichero de Clientes/Proveedores</h5>
                <!--clientes-->
                <field
                    name="data_file_partner"
                    filename="filename"
                    placeholder="Choose a file to import..."
                />
                <field name="filename" invisible="1" />
                <br/>
                <h5>Seleccione fichero de Categorias</h5>
                <!--categorias-->
                <field
                    name="data_file_category"
                    filename="filename"
                    placeholder="Choose a file to import..."
                />
                <field name="filename" invisible="1" />
                <footer>
                    <button
                        name="import_file"
                        string="_Importar"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="gestool_import_action" model="ir.actions.act_window">
        <field name="name">Gestool Import</field>
        <field name="res_model">gestool.import</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
