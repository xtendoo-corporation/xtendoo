<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="product_price" inherit_id="website_sale.product_price">
        <xpath expr="//span[@itemprop='priceCurrency']" position="after">
            <t t-set="user_authenticated" t-value="user_id != website.user_id" />
            <div
                class="alert alert-info"
                style="font-size: 1rem;"
                t-if="product.website_price_additional_info and user_authenticated"
            >
                <i class="fa fa-info-circle" /> <span
                    t-esc="product.website_price_additional_info"
                />
            </div>
        </xpath>
    </template>

</odoo>
