<odoo>
    <record id="res_config_settings_view_form_voucher" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.vouchers</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="wk_coupons.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('coupon_app_settings')]" position="inside">
                <h2>Order Refund</h2>
                <div class="row mt16 o_settings_container" id="voucher_refund_config">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="voucher_creation_product" string="Voucher Refund Product"/>
                            <div class="text-muted">
                                Product that will be used for processing refund via voucher.
                            </div>
                            <div class="text-muted">
                                <field name="voucher_creation_product" required="1"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="refund_coupon_validity" string="Refund Voucher Validity(in days)"/>
                            <div class="text-muted">
                                Validity of the refund voucher.
                            </div>
                            <div class="text-muted">
                                <field name="refund_coupon_validity" required="1"/>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <label for="refund_coupon_partial_redeem" string="Allow Partial Use Of Refund Voucher"/>
                        <div class="o_setting_left_pane">
                            <field name="refund_coupon_partial_redeem"/>
                        </div>
                        <div class="text-muted">
                            Enable for partial redeem for the refund voucher.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>