<templates id="template" xml:space="preserve">
    <t t-name="PaymentScreen" t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('payment-controls')]" position="inside">
            <div class="button voucher-refund" t-on-click="click_voucher_refund">
                <div style="display:flex">
                    <div class="fa fa-ticket"></div>
                    Refund via Voucher
                    <div class="fa fa-edit voucher-refund-edit" t-on-click="click_voucher_refund_edit" style="margin-left:5%"></div>
                </div>
            </div>
        </xpath>
    </t>

    <t t-name="VoucherRefundEditPopup" owl="1">
        <div class="modal-dialog">
            <div class="voucher-refund-edit-popup">
                <div class="title">
                    <span class="voucher-refund-title">Voucher Amount</span>
                </div>
                <div class="voucher-refund-update-popup-body">
                    <input class="voucher-refund-edit-input" type='number' t-att-value="props.order and props.order.refund_voucher_amount"></input>
                </div>
                <div class="footer">
                    <button class="button wk-update-voucher-refund" t-on-click="update_coupon_amount">Okay</button>
                </div>
            </div>
        </div>
    </t>

    <t t-name="MinAmountPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_confirm_coupon_popup">
                <p class="title"> Cannot Create Voucher !!</p>
                <div class="wk_coupon_key_label">
                    <t t-esc=" 'Cannot Create Voucher with Amount less than ' + env.pos.format_currency(props.default_min_amount) " />
                </div>
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Ok
                    </div>
                </div>

            </div>
        </div>
    </t>
    <t t-name="MaxAmountPopupWidget" owl="1">
        <div class="modal-dialog">
            <div class="popup wk_confirm_coupon_popup">
                <p class="title"> Cannot Create Voucher !!</p>
                <div class="wk_coupon_key_label">
                    <t t-esc=" 'Cannot Create Voucher with Amount more than ' + env.pos.format_currency(props.default_max_amount) " />
                </div>
                <div class="footer">
                    <div class="button cancel" t-on-click="cancel">
                        Ok
                    </div>
                </div>

            </div>
        </div>
    </t>
</templates>