<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form - mrp_bom_location</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']"
                position="after"
            >
                <field name="standard_price" context="{'uom': standard_price}" />
                <field name="total_price" sum="Total" context="{'uom': total_price}"/>
            </xpath>
        </field>
    </record>

</odoo>
