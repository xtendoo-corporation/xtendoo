<odoo>
    <record id="project_task_kind_form" model="ir.ui.view">
        <field name="name">project.task.kind.form</field>
        <field name="model">project.task.kind</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                        class="oe_stat_button"
                        name="action_view_task"
                        type="object"
                        icon="fa-tasks"
                        attrs="{'invisible': [('task_count', '=', 0)]}"
                        >
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field
                                        name="task_count"
                                    /></span>
                                <span class="o_stat_text">Task</span>
                            </div>
                        </button>
                    </div>
                    <label for="name"/>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project:task_type_tree" model="ir.ui.view">
        <field name="name">project.task.kind.tree</field>
        <field name="model">project.task.kind</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="project_task_kind_action" model="ir.actions.act_window">
        <field name="name">project task kind</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">project.task.kind</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
        <field name="context">{'module' : 'project_task_kind'}</field>
    </record>

    <menuitem
        id="project_task_kind"
        name="Project task kind"
        parent="project.menu_project_config"
        action="project_task_kind_action"
    />
</odoo>
