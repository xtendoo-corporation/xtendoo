<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <report
        string="Vale de entrega Sin Valorar"
        id="action_report_delivery_without_price"
        model="stock.picking"
        report_type="qweb-pdf"
        name="document_format_grego.report_delivery_without_price"
        file="document_format_grego.report_delivery_without_price"
        print_report_name="'Delivery without_price - %s - %s' % (object.partner_id.name or '', object.name)"
    />
    <template id="document_format_grego.report_delivery_without_price">
        <t t-foreach="docs" t-as="o">
            <t
                t-call="document_format_grego.report_delivery_without_price_document"
                t-lang="o.partner_id.lang"
            />
        </t>
    </template>
     <template id="document_format_grego.report_delivery_without_price_document">
            <t t-name="document_format_grego.report_delivery_without_price_document">
                <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
                        <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                        <div class="page">
                            <!-- Datos del documento -->
                            <!-- Datos del movimiento -->
                            <div style="width:50%; float:left;">
                                <ul class="list-unstyled">
                                    <li>
                                        <h2 class="mt16">
                                            <b>Albar치n:</b>
                                             <t t-if="o.pic_name">
                                                 <span t-field="o.pic_name"></span>
                                            </t>
                                            <t t-else="">
                                                <span t-field="o.name"></span>
                                            </t>
                                        </h2>
                                    </li>
                                    <li t-if="o.date_done">
                                        <b>Fecha:</b>
                                        <span t-esc="o.date_done.strftime('%d/%m/%Y')" />
                                    </li>
                                    <li t-if="o.origin">
                                        <b>Pedido:</b>
                                        <span t-field="o.origin" />
                                    </li>
                                </ul>
                            </div>
                            <!-- Fin datos del movimiento -->
                            <!-- Datos del cliente -->
                            <div style="width:50%; float:left;">
                                <ul class="list-unstyled">
                                    <li t-if="o.partner_id.name">
                                        <span t-field="o.partner_id.name" />
                                    </li>
                                    <li t-if="o.partner_id.comercial">
                                        <span t-field="o.partner_id.comercial" />
                                    </li>
                                    <li t-if="o.partner_id.street">
                                        <span t-field="o.partner_id.street" />
                                    </li>
                                    <li>
                                        <span
                                            t-if="o.partner_id.zip"
                                            t-field="o.partner_id.zip"
                                        />

                                        <span
                                            t-if="o.partner_id.city"
                                            t-field="o.partner_id.city"
                                        />
                                        ,
                                        <span
                                            t-if="o.partner_id.state_id"
                                            t-field="o.partner_id.state_id.name"
                                        />
                                    </li>
                                    <li
                                        t-if="o.partner_id.country_id and o.partner_id.country_id.name not in ['Espa침a','Spain']"
                                    >
                                        <span t-field="o.partner_id.country_id.name" />
                                    </li>
                                    <li t-if="o.partner_id.vat">
                                        NIF:
                                        <span t-field="o.partner_id.vat" />
                                    </li>
                                    <li t-if="o.partner_id.phone">
                                        <i class="fa fa-phone" />
                                        <span t-field="o.partner_id.phone" />
                                    </li>
                                </ul>
                            </div>
                            <!-- Fin datos del cliente -->
                            <!-- Fin datos documento -->
                            <!-- Is there a discount on at least one line? -->
                            <t
                                t-set="display_discount"
                                t-value="any([l.discount for l in o.sale_id.order_line])"
                            />
                            <table class="table" style="border:none;">
                                <t
                                    t-set="has_serial_number"
                                    t-value="o.move_line_ids.mapped('lot_id')"
                                />
                                <!-- Cabecera -->
                                <thead>
                                    <tr>
                                        <th
                                            name="th_code"
                                            class="text-left"
                                            style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                        >
                                            C칩digo
                                        </th>
                                        <th
                                            name="th_description"
                                            class="text-left"
                                            style="solid; black; padding: 0px; margin: 0px; width:70%; font-size:0.8em; !important;"
                                        >
                                            Descripci칩n
                                        </th>
                                        <th
                                            t-if="has_serial_number"
                                            groups="stock.group_lot_on_delivery_slip"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            Lote
                                        </th>
                                        <th
                                            t-if="has_serial_number"
                                            groups="stock.group_lot_on_delivery_slip"
                                            style="solid; black; padding: 0px; margin: 0px; width:7%; font-size:0.8em; !important;"
                                        >
                                            Caducidad
                                        </th>
                                        <th
                                            name="th_quantity"
                                            class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            Unds
                                        </th>
                                    </tr>
                                </thead>
                                <!-- Fin cabecera -->
                                <!-- Lineas -->
                                <tbody class="sale_tbody">
                                    <tr t-foreach="o.move_line_ids" t-as="move_line">
                                        <td
                                            name="td_code"
                                            class="text-left"
                                            style="solid; black; padding: 0px; margin: 0px; width:13%; font-size:0.8em; !important;"
                                        >
                                            <span
                                                t-field="move_line.product_id.default_code"
                                            />
                                        </td>
                                        <td
                                            name="td_name"
                                            class="text-left"
                                            style="solid; black; padding: 0px; margin: 0px; width:35%; font-size:0.8em; !important;"
                                        >
                                            <span t-field="move_line.product_id.name" />
                                            <p
                                                t-if="move_line.move_id.description_picking != move_line.product_id.name"
                                            >
                                                <t
                                                    t-set="productName"
                                                    t-value="move_line.product_id.name"
                                                />
                                                <t
                                                    t-set="name_num"
                                                    t-value="productName.find(']') + 1 "
                                                />
                                                <t
                                                    t-set="name"
                                                    t-value="productName[name_num:]"
                                                />
                                                <span
                                                    t-esc="name"
                                                    t-options="{'widget': 'text'}"
                                                />
                                            </p>
                                        </td>
                                        <td
                                            t-if="has_serial_number and move_line.lot_id.name"
                                            groups="stock.group_lot_on_delivery_slip"
                                            style="solid; black; padding: 0px; margin: 0px; width:70%; font-size:0.8em; !important;"
                                        >
                                            <span t-field="move_line.lot_id.name" />
                                        </td>
                                        <td
                                            t-elif="has_serial_number"
                                            groups="stock.group_lot_on_delivery_slip"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            <span t-field="move_line.lot_name" />
                                        </td>
                                        <td
                                            t-if="has_serial_number"
                                            groups="stock.group_lot_on_delivery_slip"
                                            style="solid; black; padding: 0px; margin: 0px; width:7%; font-size:0.8em; !important;"
                                        >
                                            <t t-if="move_line.lot_id.life_date">
                                                <span
                                                    t-esc="move_line.lot_id.life_date.strftime('%d/%m/%Y')"
                                                />
                                            </t>
                                        </td>
                                        <td
                                            class="text-right"
                                            style="solid; black; padding: 0px; margin: 0px; width:10%; font-size:0.8em; !important;"
                                        >
                                            <span t-field="move_line.qty_done" />
                                        </td>
                                    </tr>
                                </tbody>
                                <!-- Fin Lineas -->
                            </table>
                            <p t-if="o.note" name="note">
                                <span t-field="o.note" />
                            </p>
                            <!-- Firma-->
                            <p />
                            <div
                                t-if="'digital_signature' in o.fields_get() and o.digital_signature"
                                style="clear:both; float:center;"
                                name="digital_signature"
                            >
                                <div style="height:20px;" />
                                <div class="text-center">
                                    <span t-field="o.name_receiver" />
                                </div>
                                <div class="text-center">
                                    <span t-field="o.vat_receiver" />
                                </div>
                                <div class="text-center">
                                    <img
                                        t-att-src="image_data_uri(o.digital_signature)"
                                        style="max-height: 4cm; max-width: 8cm;"
                                    />
                                </div>
                            </div>
                            <!-- Fin firma-->
                        </div>
                    </t>
                </t>
            </t>
        </template>
</odoo>
