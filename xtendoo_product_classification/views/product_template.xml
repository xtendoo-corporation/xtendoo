<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_classification_search_form_view">
        <field name="name">product.classification.search.form</field>
        <field name="model">product.classification</field>
        <field name="arch" type="xml">
            <search string="Product Classification">
                <field name="name" />
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_open_classification_products">
        <field name="name">Classification Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="context">{}</field>
        <field name="domain">[('product_classification_id', '=', active_id)]</field>
    </record>
    <record
        model="ir.actions.act_window"
        id="action_open_single_product_classification"
    >
        <field name="name">Product Classification</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.classification</field>
        <field name="view_mode">kanban,form,tree</field>
        <field name="context">{}</field>
        <field name="domain">[('product_classification_id', '=', active_id)]</field>
        <field name="target">current</field>
    </record>
    <record id="view_product_classification_form" model="ir.ui.view">
        <field name="name">product.classification.form</field>
        <field name="model">product.classification</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                            name="%(action_open_classification_products)d"
                            type="action"
                            class="oe_stat_button"
                            icon="fa-cubes"
                        >
                            <field
                                name="products_count"
                                widget="statinfo"
                                string="Products"
                            />
                        </button>
                    </div>
                    <div class="oe_title">
                        <label
                            for="name"
                            string="Classification Name"
                            class="oe_edit_only"
                        />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group string="Description">
                        <field name="description" nolabel="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_product_classification_tree" model="ir.ui.view">
        <field name="name">product.classification.tree</field>
        <field name="model">product.classification</field>
        <field name="arch" type="xml">
            <tree string="product.classification">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="view_product_template_search_classification" model="ir.ui.view">
        <field name="name">product.template.search.classification</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="product_classification_id" />
                <filter
                    string="Classification"
                    name="groupby_classification"
                    domain="[]"
                    context="{'group_by' : 'product_classification_id'}"
                />
                <separator />
            </field>
        </field>
    </record>
    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.form.classification</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <field name="barcode" position="after">
                <field name="product_classification_id" />
            </field>
        </field>
    </record>
    <record id="product_normal_form_view" model="ir.ui.view">
        <field name="name">product.product.form.classification</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <field name="categ_id" position="after">
                <field name="product_classification_id" />
            </field>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_product_classification">
        <field name="name">Classification</field>
        <field name="res_model">product.classification</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>
    <record model="ir.ui.menu" id="menu_product_classification">
        <field name="name">Product Classifications</field>
        <field name="action" ref="action_product_classification" />
        <field name="parent_id" ref="sale.prod_config_main" />
    </record>
</odoo>
