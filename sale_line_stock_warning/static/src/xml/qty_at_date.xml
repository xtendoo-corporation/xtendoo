<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-extend="sale_stock.qtyAtDate">
        <t t-jquery="div" t-operation="replace">
            <div t-att-class="!widget.data.display_qty_widget ? 'invisible' : ''">
                <t t-if="!widget.data.is_mto">
                    <t t-if="widget.data.qty_to_deliver &gt; 0">
                        <t t-if="widget.data.qty_to_deliver &gt; widget.data.free_qty_today">
                                <t t-if="widget.data.qty_to_deliver &gt; widget.data.immediately_usable_qty_today">
                                <a tabindex="0" class="fa fa-info-circle text-danger"/>
                            </t>
                            <t t-else="">
                                <a tabindex="0" class="fa fa-info-circle text-warning"/>
                            </t>
                        </t>
                        <t t-else="">
                            <a tabindex="0" class="fa fa-info-circle text-primary"/>
                        </t>
                    </t>
                </t>

            </div>
        </t>
    </t>
</templates>

