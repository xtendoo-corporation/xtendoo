<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field
            name="name"
        >product.template.form (in product_form_move_waiting_link)</field>
        <field name="model">product.template</field>
        <field name="groups_id" eval="[(4, ref('sales_team.group_sale_salesman'))]" />
        <field
            name="inherit_id"
            ref="sale.product_template_form_view_sale_order_button"
        />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_stat_button"
                    name="%(product_form_move_waiting_link.action_product_template_sale_list)d"
                    type="action"
                    icon="fa-truck"
                >
                    <field
                        string="Waiting Delivery"
                        name="move_product_qty"
                        widget="statinfo"
                    />
                </button>
            </div>
        </field>
    </record>
</odoo>
