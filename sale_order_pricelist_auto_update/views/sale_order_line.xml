<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.line.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//page/field[@name='order_line']/tree/field[@name='price_unit']"
                position="after"
            >
                <field name="is_pricelist_change" invisible="1" />
                <field name="state" invisible="1" />
                <button
                    name="action_update_pricelist"
                    string="Update Pricelist"
                    type="object"
                    icon="fa-money"
                    class="text-success"
                    attrs="{'invisible': ['|',
                                              ('state','in',('done','cancel')),
                                              ('is_pricelist_change','=',False)]}"
                    groups="sale_order_pricelist_auto_update.pricelist_update_group"
                />
            </xpath>
        </field>
    </record>
</odoo>
